<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/app_background</item>

    </style>

    <style name="AppTheme.LaunchActivity">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="TextItemPlaceTitle" parent="@style/TextAppearance.AppCompat.Headline">

    </style>

    <style name="TextItemPlaceSubTitle" parent="@style/TextAppearance.AppCompat.Small">

    </style>

    <style name="TextItemPlaceSupporting" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
